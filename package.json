{
  "name": "noticebord",
	"displayName": "Noticebord",
	"description": "The official Noticebord extension for Visual Studio Code.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:noticebord.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "noticebord.helloWorld",
				"title": "Noticebord: Hello World"
			},
			{
				"command": "noticebord.showOverview",
				"title": "Noticebord: Show Overview"
			},
			{
				"command": "noticebord.showProfile",
				"title": "Noticebord: Show Profile"
			},
			{
				"command": "noticebord.createNotice",
				"title": "Noticebord: Create Notice"
			},
			{
				"command": "noticebord.createTeamNotice",
				"title": "Noticebord: Create Team Notice"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "noticebord",
					"title": "Noticebord",
					"icon": "media/logo.svg"
				}
			]
		},
		"views": {
            "noticebord": [
                {
                    "id": "notices",
                    "name": "Notices"
                },
                {
                    "id": "team-notices",
                    "name": "Team Notices"
                },
                {
                    "id": "topics",
                    "name": "Topics"
                }
            ]
        }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.66.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.3"
	}
}
